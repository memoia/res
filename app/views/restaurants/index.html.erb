<h1>Listing restaurants</h1>

<table>
  <thead>
    <tr>
      <th>Owner ID</th>
      <th>Name</th>
      <th>Desc</th>
      <th>Full address</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.owner_id %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.desc %></td>
        <td><%= restaurant.full_address %></td>
        <td><%= restaurant.phone %></td>
        <td><%=image_tag restaurant.avatar_url(:thumb).to_s %></td>

        <td><%= link_to 'Show', restaurant %></td>
        <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

