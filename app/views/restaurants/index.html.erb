<h1>Listing restaurants</h1>

<table>
  <thead>
    <tr>
      <th>User ID</th>
      <th>Name</th>
      <th>Desc</th>
      <th>Full address</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.user_id %></td>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.desc %></td>
        <td><%= restaurant.full_address %></td>
        <td><%= restaurant.phone %></td>
        <td><%= link_to image_tag(restaurant.avatar_url(:thumb).to_s), restaurant_path(restaurant) %></td>
        <% if restaurant.user == current_user %>
            <td><%#= link_to ('Show Reservations', {controller =>'reservations', :restaurant_id => restaurant.id}, :class => 'action show')%></td>
            <td><%= link_to 'List Reservations', :controller => :reservations, :restaurant_id => restaurant.id, :action => :index %></td>
            <td><%= link_to 'List Reservations By Path', restaurant_reservations_path(restaurant)%></td>
            <td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
            <td><%= link_to 'Destroy', restaurant, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <td>
        <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

